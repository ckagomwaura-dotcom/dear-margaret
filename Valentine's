    <style>
        * { box-sizing: border-box; }
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #ff0000;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
            touch-action: manipulation; /* Prevents zooming on fast taps */
        }

        .heart {
            position: absolute;
            color: rgba(255, 255, 255, 0.6);
            font-size: 20px;
            top: -10%;
            z-index: 1;
            animation: fall linear infinite;
        }

        @keyframes fall {
            to { transform: translateY(110vh) rotate(360deg); }
        }

        #card {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px 20px;
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            text-align: center;
            z-index: 10;
            width: 90%;
            max-width: 400px;
            border: 4px solid #ffccd5;
        }

        h1 { color: #d00000; font-size: 1.8rem; margin-bottom: 5px; }
        h2 { color: #ff4d6d; font-size: 1.3rem; margin-top: 0; margin-bottom: 25px;}
        
        .buttons {
            display: flex;
            flex-direction: column; /* Stacked for easier mobile clicking */
            align-items: center;
            gap: 15px;
            height: 120px; /* Reserved space so "No" has room to move */
        }

        button {
            padding: 15px 40px;
            font-size: 1.2rem;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            width: 200px;
        }

        #yesBtn { background-color: #ff4d6d; color: white; z-index: 11; }
        
        #noBtn { 
            background-color: #888; 
            color: white; 
            transition: all 0.1s ease;
            z-index: 12;
        }

        .hidden { display: none; }
        #success-message { color: #d00000; font-size: 2rem; }
